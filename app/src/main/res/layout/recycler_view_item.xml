<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="3dp"
      android:layout_height="66dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:src="@tools:sample/avatars" />

  <TextView
      android:id="@+id/textName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="@tools:sample/full_names"
      android:textSize="20sp"
      android:textColor="@android:color/black"
      app:layout_constraintTop_toTopOf="@+id/imageView2"
      app:layout_constraintStart_toEndOf="@+id/imageView2"
      android:layout_marginStart="8dp"
      android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toTopOf="@+id/textFrom" />

  <TextView
      android:id="@+id/textFrom"
      android:layout_width="88dp"
      android:layout_height="26dp"
      android:layout_marginStart="8dp"
      app:layout_constraintBottom_toBottomOf="@+id/imageView2"
      app:layout_constraintStart_toEndOf="@+id/imageView2"
      tools:text="@tools:sample/lorem[4:10]" />

  <TextView
      android:id="@+id/textTo"
      android:layout_width="73dp"
      android:layout_height="26dp"
      android:layout_marginStart="4dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/textFrom"
      tools:text="@tools:sample/lorem[4:10]" />

  <TextView
      android:id="@+id/textNeeded"
      android:layout_width="61dp"
      android:layout_height="26dp"
      android:layout_marginStart="204dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/imageView2"
      tools:text="@tools:sample/lorem[4:10]" />

  <TextView
      android:id="@+id/textDate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="@tools:sample/date/hhmm"
      app:layout_constraintTop_toTopOf="@+id/textName"
      app:layout_constraintStart_toEndOf="@id/textName"
      android:layout_marginEnd="8dp" />

  <ImageButton
      android:id="@+id/rmvBtn"
      android:layout_width="42dp"
      android:layout_height="48dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="@id/textFrom"
      app:srcCompat="@android:drawable/ic_menu_delete"
      tools:layout_editor_absoluteY="44dp" />

  <ImageButton
      android:id="@+id/editBtn"
      android:layout_width="48dp"
      android:layout_height="48dp"
      app:layout_constraintEnd_toStartOf="@id/rmvBtn"
      app:layout_constraintBottom_toBottomOf="@id/textFrom"
      app:srcCompat="@android:drawable/ic_menu_edit"
      tools:layout_editor_absoluteY="48dp" />
</androidx.constraintlayout.widget.ConstraintLayout>